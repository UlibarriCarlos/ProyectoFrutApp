<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rellena los campos y pulsa guardar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextCodigoTienda" />

    <EditText
        android:id="@+id/editTextCodigoTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:hint="Código de Tienda"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextNombreProducto" />

    <EditText
        android:id="@+id/editTextNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:hint="Nombre del Producto"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCodigoTienda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextPrecio" />

    <EditText
        android:id="@+id/editTextPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:hint="Precio"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextNombreProducto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextCantidad" />

    <EditText
        android:id="@+id/editTextCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:hint="Cantidad"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPrecio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextDescripcion" />

    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:hint="Descripción"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toggleButtonEstado" />

    <ToggleButton
        android:id="@+id/toggleButtonEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2E7D32"
        android:textOff="Uds"
        android:textOn="Kg"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/radioGroupCategoria" />

    <RadioGroup
        android:id="@+id/radioGroupCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleButtonEstado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonGuardarProducto">

        <RadioButton
            android:id="@+id/radioButtonFrutas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:text="Frutas"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButtonVerduras"
            android:layout_width="wrap_content"
            android:background="#2E7D32"
            android:layout_height="wrap_content"
            android:text="Verduras"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButtonVarios"
            android:layout_width="wrap_content"
            android:background="#FFA000"
            android:layout_height="wrap_content"
            android:text="Varios"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonGuardarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Producto"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupCategoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
