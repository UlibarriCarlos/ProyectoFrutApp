<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/zigzag"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Seleciona opcion \n que deses realizar\n pulsando el boton"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCompraStock"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Compra Stock" />

    <Button
        android:id="@+id/btnAltaProducto"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Alta Producto" />

    <Button
        android:id="@+id/btnOtros"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Otros" />

</LinearLayout>
